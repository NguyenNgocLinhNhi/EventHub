<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eventus Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root { --emerald: #006D5B; --dark-emerald: #004d40; }
        body { background-color: #f4f7f6; font-family: 'Inter', sans-serif; }
        #wrapper { display: flex; width: 100%; align-items: stretch; }
        /* Sidebar */
        #sidebar { min-width: 250px; max-width: 250px; background: var(--dark-emerald); color: #fff; transition: all 0.3s; min-height: 100vh; }
        #sidebar .sidebar-header { padding: 20px; background: rgba(0,0,0,0.1); text-align: center; }
        #sidebar ul.components { padding: 20px 0; }
        #sidebar ul li a { padding: 15px 25px; display: block; color: rgba(255,255,255,0.7); text-decoration: none; }
        #sidebar ul li a:hover, #sidebar ul li.active > a { color: #fff; background: var(--emerald); border-left: 5px solid #fff; }
        /* Content */
        #content { width: 100%; padding: 30px; }
        .card-stat { border: none; border-radius: 15px; transition: transform 0.3s; color: white; }
        .card-stat:hover { transform: translateY(-5px); }
    </style>
</head>
<body>
    <div id="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>EVENTUS</h3>
                <small class="text-white-50">Admin Portal</small>
            </div>
            <ul class="list-unstyled components">
                <li class="active"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-chart-line me-2"></i> Dashboard</a></li>
                <li><a href="#"><i class="fas fa-calendar-alt me-2"></i> Quản lý sự kiện</a></li>
                <li><a href="#"><i class="fas fa-users me-2"></i> Người tham gia</a></li>
                <li><a href="#"><i class="fas fa-ticket-alt me-2"></i> Quản lý vé</a></li>
                <li><a href="#"><i class="fas fa-cog me-2"></i> Cài đặt hệ thống</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-external-link-alt me-2"></i> Xem trang chủ</a></li>
            </ul>
        </nav>

        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4 rounded-4">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1 text-muted">@ViewData["Title"]</span>
                    <div class="ms-auto d-flex align-items-center">
                        <span class="me-3 small fw-bold">Xin chào, Admin</span>
                        <img src="~/img/event-default.jpg" class="rounded-circle" width="35" height="35" />
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>