@{
    ViewData["Title"] = "Organizer Home - Eventus";
    Layout = "_LayoutLanding";
}

<section class="hero-section text-white py-5" style="background-color: #00796b;">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Host Amazing Events with <span class="text-info">Ease</span></h1>
                <p class="lead mb-4">Join thousands of successful event organizers. Create, manage, and grow your events with our powerful platform.</p>
                <div class="d-flex gap-3">
                    <a href="#" class="btn btn-light btn-lg px-4 rounded-pill text-dark fw-bold">Get Started Free</a>
                    <a href="#" class="btn btn-outline-light btn-lg px-4 rounded-pill">Sign In</a>
                </div>
            </div>
            <div class="col-lg-6 mt-5 mt-lg-0">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="p-4 text-center rounded-4" style="background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2);">
                            <i class="bi bi-calendar-check fs-1 mb-2"></i>
                            <h3 class="fw-bold mb-0">2,500+</h3>
                            <small>Events Created</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-4 text-center rounded-4" style="background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2);">
                            <i class="bi bi-people fs-1 mb-2"></i>
                            <h3 class="fw-bold mb-0">50K+</h3>
                            <small>Happy Attendees</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-4 text-center rounded-4" style="background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2);">
                            <i class="bi bi-graph-up-arrow fs-1 mb-2"></i>
                            <h3 class="fw-bold mb-0">95%</h3>
                            <small>Success Rate</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-4 text-center rounded-4" style="background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2);">
                            <i class="bi bi-award fs-1 mb-2"></i>
                            <h3 class="fw-bold mb-0">500+</h3>
                            <small>Organizers</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white text-center">
    <div class="container py-5">
        <h2 class="fw-bold">Everything You Need to Succeed</h2>
        <p class="text-muted mb-5">Powerful tools designed specifically for event organizers.</p>
        <div class="row g-4">
            @foreach (var feature in new[] { 
                new { Icon = "bi-calendar-plus", Color = "info", Title = "Easy Event Creation", Desc = "Create and publish events in minutes with our intuitive interface. Add details, set pricing, and customize your event page." },
                new { Icon = "bi-people", Color = "success", Title = "Attendee Management", Desc = "Track registrations, manage attendee lists, and communicate with your audience all in one place." },
                new { Icon = "bi-bar-chart", Color = "primary", Title = "Analytics & Insights", Desc = "Get real-time analytics on ticket sales, revenue, and attendee demographics to optimize your events." },
                new { Icon = "bi-shield-check", Color = "info", Title = "Secure Payments", Desc = "Accept payments safely with our secure payment processing. Multiple payment methods supported." },
                new { Icon = "bi-lightning-charge", Color = "warning", Title = "Marketing Tools", Desc = "Promote your events with built-in marketing tools, email campaigns, and social media integration." },
                new { Icon = "bi-headset", Color = "info", Title = "24/7 Support", Desc = "Get help whenever you need it with our dedicated support team available around the clock." }
            })
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-4 rounded-4 feature-card">
                        <div class="icon-box mb-3 mx-auto rounded-3 bg-@feature.Color bg-opacity-10 text-@feature.Color d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi @feature.Icon fs-3"></i>
                        </div>
                        <h5 class="fw-bold">@feature.Title</h5>
                        <p class="text-muted small">@feature.Desc</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold">How It Works</h2>
        <p class="text-muted mb-5">Get started in 3 simple steps</p>
        <div class="row">
            <div class="col-md-4">
                <div class="step-num bg-teal text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; background-color: #00796b;">1</div>
                <h5 class="fw-bold">Create Account</h5>
                <p class="small text-muted">Sign up for free in less than 2 minutes. No credit card required.</p>
            </div>
            <div class="col-md-4">
                <div class="step-num bg-teal text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; background-color: #00796b;">2</div>
                <h5 class="fw-bold">Create Your Event</h5>
                <p class="small text-muted">Add event details, set ticket prices, and customize your event page.</p>
            </div>
            <div class="col-md-4">
                <div class="step-num bg-teal text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; background-color: #00796b;">3</div>
                <h5 class="fw-bold">Sell Tickets</h5>
                <p class="small text-muted">Publish your event and start selling tickets immediately.</p>
            </div>
        </div>
    </div>
</section>

<section class="py-5 text-white text-center" style="background-color: #00695c;">
    <div class="container py-4">
        <h2 class="fw-bold">Ready to Host Your Next Event?</h2>
        <p class="mb-4">Join our community of successful event organizers today.</p>
        <a href="#" class="btn btn-light btn-lg px-5 rounded-pill fw-bold">Start For Free</a>
        <p class="mt-3 small">Already have an account? <a href="#" class="text-info text-decoration-none">Sign in here</a></p>
    </div>
</section>


<style>
    .feature-card { transition: all 0.3s ease; }
    .feature-card:hover { transform: translateY(-10px); }
    .text-info { color: #26c6da !important; }
</style>