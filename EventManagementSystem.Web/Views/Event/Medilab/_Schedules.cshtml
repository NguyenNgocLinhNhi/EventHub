@model IEnumerable<EventManagementSystem.Web.Models.Entities.Schedule>
<section id="schedule" class="services section light-background">
    <div class="container section-title" data-aos="fade-up">
        <h2>Lịch trình chi tiết</h2>
        <p>Tiến trình các phiên thảo luận và hoạt động khoa học</p>
    </div>
    <div class="container">
        <div class="row gy-4">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model.OrderBy(s => s.StartTime))
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up">
                        <div class="service-item position-relative">
                            <div class="icon"><i class="fas fa-heartbeat"></i></div>
                            <h3>@item.StartTime.ToString("HH:mm") - @item.EndTime.ToString("HH:mm")</h3>
                            <h4 class="fw-bold">@item.Title</h4>
                            <p>@item.Description</p>
                            <small class="text-primary"><i class="bi bi-geo-alt"></i> @item.Location</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted">Lịch trình đang được cập nhật...</div>
            }
        </div>
    </div>
</section>