@model IEnumerable<EventManagementSystem.Web.Models.Entities.TicketType>

<section id="pricing" class="pricing-section pricing-style-4 bg-light pt-100 pb-100">
    <div class="container">
        <div class="section-title text-center mb-60">
            <h3>Vé Tham Dự</h3> [cite: 42]
        </div>
        <div class="row justify-content-center">
            @if (Model != null && Model.Any())
            {
                foreach (var ticket in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-pricing text-center bg-white p-5 rounded border shadow-sm">
                            <h6 class="text-uppercase text-muted">@ticket.Name</h6> [cite: 43]
                            <h3 class="text-primary my-4">@(ticket.Price == 0 ? "Miễn Phí" : ticket.Price.ToString("N0") + "đ")</h3> [cite: 44]
                            <ul class="mb-4 list-unstyled text-start ms-4">
                                <li><i class="lni lni-checkmark-circle text-primary me-2"></i>Số lượng: @ticket.Quantity</li>
                                <li><i class="lni lni-checkmark-circle text-primary me-2"></i>Check-in nhanh</li>
                            </ul>
                            @* Nút đặt vé *@
                            <a href="@Url.Action("BookingProcess", "Booking", new { id = ticket.EventId })" class="btn btn-primary w-100 py-3">
                                <i class="fa fa-shopping-cart me-2"></i>ĐẶT VÉ NGAY
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>