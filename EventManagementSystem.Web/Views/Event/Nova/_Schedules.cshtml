@model IEnumerable<EventManagementSystem.Web.Models.Entities.Schedule>

@if (Model != null && Model.Any())
{
    <section id="schedule" class="about-section py-5">
        <div class="container">
            <div class="section-title text-center mb-50">
                <h3>Lịch Trình Hoạt Động</h3> [cite: 37]
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    @foreach (var item in Model.OrderBy(s => s.StartTime))
                    {
                        <div class="p-4 mb-3 rounded border-start border-5 border-primary bg-white shadow-sm">
                            <h5 class="text-primary">
                                @item.StartTime.ToString("HH:mm") - @item.EndTime.ToString("HH:mm") [cite: 38]
                            </h5>
                            <h5 class="mt-2">@item.Title</h5> [cite: 39]
                            <p class="text-muted small"><i class="lni lni-map-marker"></i> @(item.Location ?? "Tại hội trường")</p> [cite: 40]
                            <p class="mt-2">@item.Description</p> [cite: 41]
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}