@model EventManagementSystem.Web.Models.Entities.Event

<div class="container-fluid py-5" id="about">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="about-img">
                    @* Nếu Model.ImageUrl null thì dùng ảnh mặc định của template *@
                    <img class="img-fluid w-100" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/Templates/Charitize/img/about.jpg" : Model.ImageUrl)" alt="@Model.Title">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.3s">
                <p class="section-title bg-white text-start text-primary pe-3">Về sự kiện</p>
                <h1 class="display-6 mb-4">@Model.Title</h1>

                @* Hiển thị Category Name (Đã được Include trong Controller) *@
                @if (Model.Category != null)
                {
                    <p class="text-primary mb-2"><i class="fa fa-tag me-2"></i>Chủ đề: @Model.Category.Name</p>
                }

                <p class="mb-4">@Model.Description</p>

                <div class="row g-4 pt-2">
                    <div class="col-sm-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="btn-lg-square bg-primary text-white rounded-circle">
                                <i class="fa fa-map-marker-alt"></i>
                            </div>
                            <div class="ms-3">
                                <h5 class="mb-0">Địa điểm</h5>
                                <span>@Model.Location</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <div class="btn-lg-square bg-primary text-white rounded-circle">
                                <i class="fa fa-calendar-alt"></i>
                            </div>
                            <div class="ms-3">
                                <h5 class="mb-0">Thời gian bắt đầu</h5>
                                @* Sửa lỗi ToString: StartDate là DateTime (không null) *@
                                <span>@($"{Model.StartDate:dd/MM/yyyy HH:mm}")</span>
                            </div>
                        </div>

                        @if (Model.EndDate.HasValue)
                        {
                            <div class="d-flex align-items-center">
                                <div class="btn-lg-square bg-primary text-white rounded-circle">
                                    <i class="fa fa-calendar-check"></i>
                                </div>
                                <div class="ms-3">
                                    <h5 class="mb-0">Thời gian kết thúc</h5>
                                    @* Sửa lỗi ToString: EndDate là DateTime? (nullable) *@
                                    <span>@($"{Model.EndDate.Value:dd/MM/yyyy HH:mm}")</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="row g-4 pt-3">
                    <div class="col-sm-6">
                        <a class="btn btn-primary py-3 px-5" href="#tickets">Đăng ký ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>