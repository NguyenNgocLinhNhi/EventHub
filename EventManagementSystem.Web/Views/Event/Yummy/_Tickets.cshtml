@model IEnumerable<EventManagementSystem.Web.Models.Entities.TicketType>
<section id="tickets" class="section py-5 light-background">
    <div class="container section-title" data-aos="fade-up">
        <h2>Tham Gia</h2>
        <p><span>Đăng Ký</span> <span class="description-title">Mua Vé</span></p>
    </div>
    <div class="container">
        <div class="row gy-4 justify-content-center">
            @if (Model != null && Model.Any()) {
                foreach (var ticket in Model) {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up">
                        <div class="card text-center h-100 shadow border-0" style="border-radius: 15px;">
                            <div class="card-header bg-danger text-white py-3" style="border-radius: 15px 15px 0 0;">
                                <h4 class="my-0 fw-bold">@ticket.Name</h4>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h1 class="card-title pricing-card-title text-danger">
                                    @ticket.Price.ToString("N0") <small class="text-muted fw-light" style="font-size: 1rem;">VNĐ</small>
                                </h1>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li><i class="bi bi-check-circle text-success me-2"></i>Số lượng còn: @ticket.Quantity</li>
                                    <li><i class="bi bi-check-circle text-success me-2"></i>Check-in ưu tiên</li>
                                </ul>
                                <div class="mt-auto">
                                    @* Nút đặt vé *@
                                    <a href="@Url.Action("BookingProcess", "Booking", new { id = ticket.EventId })" class="btn btn-primary w-100 py-3">
                                        <i class="fa fa-shopping-cart me-2"></i>ĐẶT VÉ NGAY
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>