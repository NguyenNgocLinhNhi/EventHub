@model EventManagementSystem.Web.Models.Entities.Event
<section id="hero" class="hero section dark-background">
    <img src="@(Model.ImageUrl ?? "/Templates/Knightone/assets/img/hero-bg.jpg")" alt="" data-aos="fade-in">
    <div class="container d-flex flex-column align-items-center text-center">
        <h2 data-aos="fade-up" data-aos-delay="100">@Model.Title</h2>
        <p data-aos="fade-up" data-aos-delay="200">@Html.Raw(Model.Description)</p>
        <div data-aos="fade-up" data-aos-delay="300">
            <a href="https://www.youtube.com/watch?v=Y7f98aduVJ8" class="glightbox pulsating-play-btn"></a>
        </div>
    </div>
</section>