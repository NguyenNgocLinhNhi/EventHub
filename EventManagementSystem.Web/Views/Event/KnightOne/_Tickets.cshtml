@model IEnumerable<EventManagementSystem.Web.Models.Entities.TicketType>
<section id="tickets" class="pricing section">
    <div class="container section-title" data-aos="fade-up">
        <h2>Bảng giá vé</h2>
        <p>Chọn loại vé phù hợp với bạn</p>
    </div>
    <div class="container">
        <div class="row gy-4 justify-content-center">
            @if (Model != null && Model.Any())
            {
                foreach (var ticket in Model)
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up">
                        <div class="pricing-item">
                            <h3>@ticket.Name</h3>
                            <h4>@ticket.Price.ToString("N0")<span> VNĐ</span></h4>
                            <ul>
                                <li><i class="bi bi-check"></i> Số lượng còn lại: @ticket.Quantity</li>
                                <li><i class="bi bi-check"></i> Check-in nhanh qua mã QR</li>
                            </ul>
                            <div class="btn-wrap">
                                @* Nút đặt vé *@
                                <a href="@Url.Action("BookingProcess", "Booking", new { id = ticket.EventId })" class="btn btn-primary w-100 py-3">
                                    <i class="fa fa-shopping-cart me-2"></i>ĐẶT VÉ NGAY
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted">Hiện tại vé chưa được mở bán.</div>
            }
        </div>
    </div>
</section>