@model IEnumerable<EventManagementSystem.Web.Models.Entities.Schedule>

<div class="container-fluid py-5" id="schedule">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Lịch trình</h5>
            <h1 class="display-4">Chương trình khoa học chi tiết</h1>
        </div>
        <div class="row g-5">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model.OrderBy(s => s.StartTime))
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="service-item bg-light rounded d-flex flex-column align-items-center justify-content-center text-center p-4">
                            <div class="service-icon mb-4">
                                <i class="fa fa-2x fa-clock text-white"></i>
                            </div>
                            <h4 class="mb-3">@item.Title</h4>
                            <p class="m-0 text-primary fw-bold">@item.StartTime.ToString("HH:mm") - @item.EndTime.ToString("HH:mm")</p>
                            @if (!string.IsNullOrEmpty(item.Location))
                            {
                                <p class="mt-2 small text-dark"><i class="fa fa-map-marker-alt text-primary me-1"></i> @item.Location</p>
                            }
                            <p class="mt-2 small">@item.Description</p>
                            <a class="btn btn-lg btn-primary rounded-pill mt-3" href="#!">
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted italic">Lịch trình đang được cập nhật...</p>
                </div>
            }
        </div>
    </div>
</div>