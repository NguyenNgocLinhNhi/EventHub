@model EventManagementSystem.Web.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot your password?";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .bg-forgot-header {
        background: linear-gradient(135deg, #141E30, #243B55);
        color: white;
    }

    .header-title {
        color: #ffffff !important;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        letter-spacing: 1px;
    }

    .card-forgot {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.15);
        overflow: hidden;
    }

    .form-control-lg {
        border-radius: 0.5rem;
        font-size: 1rem;
    }

    .btn-submit {
        background-color: #004d40;
        border-color: #004d40;
        border-radius: 0.5rem;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background-color: #00695c;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

    .icon-lock {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: rgba(255,255,255,0.8);
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card card-forgot">

                <div class="card-header bg-forgot-header text-center py-4">
                    <i class="fas fa-lock icon-lock"></i>
                    <h3 class="mb-1 header-title">Account Recovery</h3>
                    <p class="small mb-0 text-white-50">
                        We will help you reset your password
                    </p>
                </div>

                <div class="card-body p-5">

                    <p class="text-muted text-center mb-4 small">
                        Enter the email address associated with your account and we'll send you a link to reset your password.
                    </p>

                    <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <div class="mb-4">
                            <label asp-for="Email"
                                   class="font-weight-bold text-muted small text-uppercase"></label>

                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"
                                      style="border-radius: 0.5rem 0 0 0.5rem;">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>

                                <input asp-for="Email"
                                       class="form-control form-control-lg border-start-0"
                                       placeholder="name@example.com"
                                       style="border-radius: 0 0.5rem 0.5rem 0;" />
                            </div>

                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button type="submit"
                                class="btn btn-submit btn-lg w-100 text-white">
                            SEND RESET LINK
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Login" asp-controller="Account"
                           class="text-muted small text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i> Back to Login
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
