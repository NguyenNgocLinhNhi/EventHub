@{
    ViewBag.Title = "Check your email";
}

<style>
    /* CSS cho trang thông báo */
    .card-confirmation {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .icon-success {
        font-size: 4rem;
        color: #004d40; /* Màu xanh thương hiệu */
        margin-bottom: 1.5rem;
    }

    .btn-back {
        border-radius: 50px;
        padding: 10px 30px;
        font-weight: 600;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-confirmation p-5">
                <div class="card-body">
                    <i class="fas fa-paper-plane icon-success"></i>

                    <h2 class="mb-3 font-weight-bold text-dark">Check Your Email</h2>

                    <p class="text-muted mb-4">
                        Please check your email inbox. We have sent you a link to reset your password.
                    </p>

                    <p class="small text-muted mb-5">
                        If you don't see the email, check your spam folder or try again.
                    </p>

                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-dark btn-back">
                        Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>