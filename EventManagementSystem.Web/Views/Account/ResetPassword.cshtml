<!-- Trang nhập mật khẩu mới sau khi reset -->
@model EventManagementSystem.Web.Models.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<style>
    /* Dùng style chung (màu xanh than) */
    .bg-reset-header {
        background: linear-gradient(135deg, #141E30, #243B55);
        color: white;
    }

    .header-title {
        color: #ffffff !important;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        letter-spacing: 1px;
    }

    .card-reset {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.15);
        overflow: hidden;
    }

    .form-control-lg {
        border-radius: 0.5rem;
        font-size: 1rem;
    }

    .btn-submit {
        background-color: #004d40;
        border-color: #004d40;
        border-radius: 0.5rem;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background-color: #00695c;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card card-reset">

                <div class="card-header bg-reset-header text-center py-4">
                    <i class="fas fa-key mb-2" style="font-size: 2rem; opacity: 0.8;"></i>
                    <h3 class="mb-1 header-title">Set New Password</h3>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger small" })
                        @Html.HiddenFor(model => model.Code)

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "font-weight-bold text-muted small text-uppercase" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Confirm your email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Password, new { @class = "font-weight-bold text-muted small text-uppercase" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", placeholder = "New password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "font-weight-bold text-muted small text-uppercase" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", placeholder = "Confirm new password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-submit btn-lg btn-block w-100 text-white">
                                RESET PASSWORD
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    Scripts.Render("~/bundles/jqueryval")
}