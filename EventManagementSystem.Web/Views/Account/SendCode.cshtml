@using EventManagementSystem.Web.ViewModels
@model SendCodeViewModel

@{
    ViewData["Title"] = "Security Check";
}

<!-- Trang này dùng cho xác thực -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-sm" style="border-radius: 1rem;">
                <div class="card-header bg-white text-center py-4 border-bottom-0">
                    <i class="fas fa-shield-alt text-primary mb-2" style="font-size: 3rem;"></i>
                    <h3 class="fw-bold">Security Check</h3>
                </div>

                <div class="card-body p-4 pt-0">
                    <form asp-action="SendCode"
                          asp-controller="Account"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          method="post"
                          role="form">

                        @Html.AntiForgeryToken()

                        <!-- Hidden -->
                        <input asp-for="RememberMe" type="hidden" />

                        <p class="text-center text-muted small mb-4">
                            Select verification method
                        </p>

                        <div class="form-group mb-4">
                            <select asp-for="SelectedProvider"
                                    asp-items="Model.Providers"
                                    class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="SelectedProvider"
                                  class="text-danger small"></span>
                        </div>

                        <button type="submit"
                                class="btn btn-primary btn-lg w-100 rounded-pill">
                            Submit
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
