@using EventManagementSystem.Web.ViewModels
@model SetPasswordViewModel
@{
    ViewData["Title"] = "Create Password";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .bg-password-header {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: white;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .card-password {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.15);
    }

    .form-label-custom {
        color: #006D5B;
        font-weight: 700;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .input-custom {
        border-radius: 0.75rem;
        border: 1.5px solid #eee;
        padding-left: 2.8rem;
        transition: all 0.3s;
    }

    .input-custom:focus {
        border-color: #006D5B;
        box-shadow: 0 0 0 0.2rem rgba(0, 109, 91, 0.15);
    }

    .input-group-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #006D5B;
        z-index: 10;
        font-size: 1.1rem;
    }

    .btn-update {
        background-color: #006D5B;
        border-color: #006D5B;
        color: white;
        font-weight: bold;
        border-radius: 50px;
        padding: 12px;
        transition: all 0.3s;
    }

    .btn-update:hover {
        background-color: #004d40;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card card-password shadow-lg">
                <div class="card-header bg-password-header text-center py-4">
                    <h3 class="fw-bold mb-1" style="text-shadow: 0 2px 4px rgba(0,0,0,0.3);">Create Password</h3>
                    <p class="small mb-0 text-white-50">Set a local password for your account</p>
                </div>

                <div class="card-body p-4 p-lg-5">
                    <p class="text-muted text-center small mb-4">
                        You logged in via social media. Add a password to sign in with your email directly next time.
                    </p>

                    <form asp-controller="Manage" asp-action="SetPassword" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="All" class="alert alert-danger small border-0 py-2 mb-4"></div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label form-label-custom">New Password</label>
                            <div class="position-relative">
                                <i class="fa-solid fa-key input-group-icon"></i>
                                <input asp-for="NewPassword" class="form-control form-control-lg input-custom" placeholder="Enter new password" type="password" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label form-label-custom">Confirm Password</label>
                            <div class="position-relative">
                                <i class="fa-solid fa-shield-check input-group-icon"></i>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg input-custom" placeholder="Repeat password" type="password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-update btn-lg shadow-sm">
                                <i class="fa-solid fa-lock me-2"></i> SET PASSWORD
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none mt-2">
                                Skip for now
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}