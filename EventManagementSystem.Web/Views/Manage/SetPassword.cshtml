@model EventManagementSystem.Web.Models.ViewModels.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<style>
    .bg-manage-header {
        background: linear-gradient(135deg, #004d40, #00695c);
        color: white;
    }

    .card-manage {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .form-control-lg {
        border-radius: 0.5rem;
        font-size: 1rem;
    }

    .btn-submit {
        background-color: #004d40;
        border-color: #004d40;
        border-radius: 0.5rem;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background-color: #00695c;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-manage">
                <div class="card-header bg-manage-header text-center py-4">
                    <i class="fas fa-lock mb-2" style="font-size: 2rem;"></i>
                    <h3 class="mb-0">Create Local Password</h3>
                </div>
                <div class="card-body p-5">
                    <p class="text-muted text-center small mb-4">
                        You do not have a local password for this site. Add a local account so you can log in without an external login.
                    </p>

                    @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger small text-center mb-3" })

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "font-weight-bold text-muted small text-uppercase" })
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-lg" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "font-weight-bold text-muted small text-uppercase" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg" })
                        </div>

                        <button type="submit" class="btn btn-submit btn-lg btn-block w-100 text-white">Set Password</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { Scripts.Render("~/bundles/jqueryval") }