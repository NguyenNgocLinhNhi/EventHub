@model EventManagementSystem.Web.Models.ViewModels.VerifyPhoneNumberViewModel
@{
    ViewData["Title"] = "Verify Phone";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 text-center">
            <div class="card border-0 shadow-sm p-5" style="border-radius: 1rem;">
                <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
                <h3 class="fw-bold">Verify Code</h3>
                <p class="text-muted small">Enter the 6-digit code sent to your phone</p>

                <form asp-action="VerifyPhoneNumber" method="post">
                    <input asp-for="PhoneNumber" type="hidden" />
                    <div class="mb-4">
                        <input asp-for="Code" class="form-control form-control-lg text-center fw-bold" style="letter-spacing: 10px;" placeholder="000000" />
                        <span asp-validation-for="Code" class="text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>