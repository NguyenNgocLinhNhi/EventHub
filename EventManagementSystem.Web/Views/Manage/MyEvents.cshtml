@{
    ViewData["Title"] = "My Events";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">My Events</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4">
            <i class="fas fa-plus me-2"></i> Join New Event
        </a>
    </div>

    <div class="row g-4">
        @* Ví dụ 1 sự kiện *@
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 1rem;">
                <img src="~/Content/Theme/img/project-1.jpg" class="card-img-top" style="height: 200px; object-fit: cover; border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                <div class="card-body p-4">
                    <div class="badge bg-primary mb-2">Business</div>
                    <h5 class="fw-bold mb-2">Economic Forum 2025</h5>
                    <p class="text-muted small mb-3">
                        <i class="far fa-clock me-1"></i> Dec 20, 2025 • 09:00 AM
                    </p>
                    <a href="#" class="btn btn-outline-dark btn-sm rounded-pill w-100">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>