@model EventManagementSystem.Web.Models.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "My Profile";
}

<style>
    .bg-profile-header { background: linear-gradient(135deg, #004d40, #00695c); color: white !important; padding: 40px 0 80px 0; }
    .profile-card { border: none; border-radius: 1rem; box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1); margin-top: -60px; background: white; }
    .avatar-circle { width: 120px; height: 120px; background: white; color: #004d40; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 3.5rem; border: 5px solid #f8f9fa; margin: 0 auto; }
    .info-box { background: #f8f9fa; border-radius: 0.8rem; padding: 1.2rem; margin-bottom: 1rem; border-left: 4px solid #004d40; }
</style>

<div class="bg-profile-header text-center">
    <div class="container">
        <h2 class="fw-bold text-white">Account Settings</h2>
        <p>Manage your personal information and security</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card profile-card p-4">
                <div class="avatar-circle shadow-sm mb-3">
                    <i class="fas fa-user"></i>
                </div>
                <div class="text-center mb-4">
                    <h3 class="fw-bold">@(Model.FullName ?? "User")</h3>
                    <p class="text-muted">@Model.Email</p>
                    <a asp-action="EditProfile" class="btn btn-sm btn-outline-primary rounded-pill px-4">Edit Profile</a>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="small text-muted text-uppercase">Email</div>
                            <div class="fw-bold">@Model.Email</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box d-flex justify-content-between align-items-center">
                            <div>
                                <div class="small text-muted text-uppercase">Phone Number</div>
                                <div class="fw-bold">@(Model.PhoneNumber ?? "None")</div>
                            </div>
                            <a asp-action="AddPhoneNumber" class="text-primary"><i class="fas fa-pen"></i></a>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="info-box d-flex justify-content-between align-items-center">
                            <div>
                                <div class="small text-muted text-uppercase">Security</div>
                                <div class="text-muted small">Password & External Logins</div>
                            </div>
                            <div>
                                <a asp-action="ChangePassword" class="btn btn-sm btn-dark rounded-pill me-2">Change Password</a>
                                <a asp-action="ManageLogins" class="btn btn-sm btn-outline-dark rounded-pill">Manage Logins</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>