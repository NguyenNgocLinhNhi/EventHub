@model EventManagementSystem.Web.Models.ViewModels.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Add Phone Number";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />

<style>
    .bg-manage-header {
        background: linear-gradient(135deg, #004d40, #00695c);
        color: white;
    }

    .card-manage {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .form-control-lg {
        border-radius: 0.5rem;
        font-size: 1rem;
    }

    .btn-submit {
        background-color: #004d40;
        border-color: #004d40;
        border-radius: 0.5rem;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background-color: #00695c;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

    .iti {
        width: 100%;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-manage">
                <div class="card-header bg-manage-header text-center py-4">
                    <i class="fas fa-phone-alt mb-2" style="font-size: 2rem;"></i>
                    <h3 class="mb-0">Add Phone Number</h3>
                </div>
                <div class="card-body p-5">
                    @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger small text-center mb-3" })

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.Number, new { @class = "font-weight-bold text-muted small text-uppercase" })
                            @Html.TextBoxFor(m => m.Number, new { @class = "form-control form-control-lg", id = "txtPhone", type = "tel" })
                            <input type="hidden" id="full_phone_hidden" name="Number" />
                        </div>

                        <button type="submit" class="btn btn-submit btn-lg btn-block w-100 text-white">Send Verification Code</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script>
        $(document).ready(function () {
            var input = document.querySelector("#txtPhone");
            var iti = window.intlTelInput(input, {
                initialCountry: "vn",
                separateDialCode: true,
                utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
            });
            $("form").submit(function () {
                if (iti.isValidNumber()) {
                    $("#txtPhone").val(iti.getNumber());
                }
            });
        });
    </script>
}