@model EventManagementSystem.Web.Models.Entities.Event

@{
    ViewBag.Title = Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@Model.Title - Eventus</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <link href="~/Templates/Charitize/img/favicon.ico" rel="icon">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@600;700&family=Open+Sans&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/Templates/Charitize/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Templates/Charitize/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="~/Templates/Charitize/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Templates/Charitize/css/style.css" rel="stylesheet">

    <style>
        body {
            overflow-x: hidden;
        }

        .sticky-top {
            top: 0;
            position: fixed;
            width: 100%;
            z-index: 999;
        }

        .btn-home-back {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 9999;
            background: rgba(0,0,0,0.5);
            color: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
            text-decoration: none;
        }

            .btn-home-back:hover {
                background: #FDBE33;
                color: white;
            }
        /* Màu vàng Charitize */
    </style>
</head>

<body>
    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn-home-back" title="Quay về trang chủ">
        <i class="fas fa-arrow-left"></i>
    </a>

    <div class="container-fluid bg-secondary px-0 wow fadeIn" data-wow-delay="0.1s">
        <div class="nav-bar">
            <nav class="navbar navbar-expand-lg bg-primary navbar-dark px-4 py-lg-0">
                <a href="#hero" class="navbar-brand d-lg-none">
                    <h1 class="m-0 display-4 text-white text-uppercase">Eventus</h1>
                </a>
                <button type="button" class="navbar-toggler me-0" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav me-auto">
                        @* Quay lại phần đầu trang (Hero) *@
                        <a href="#hero" class="nav-item nav-link active">Trang chủ</a>

                        @* Liên kết đến Section _About.cshtml *@
                        <a href="#about" class="nav-item nav-link">Giới thiệu</a>

                        @* Liên kết đến Section _Schedules.cshtml (Chỉ hiển thị nếu có lịch trình) *@
                        @if (Model.Schedules != null && Model.Schedules.Any())
                        {
                            <a href="#schedule" class="nav-item nav-link">Lịch trình</a>
                        }

                        @* Liên kết đến Section _Speakers.cshtml (Diễn giả/Đại sứ) *@
                        @if (Model.Speakers != null && Model.Speakers.Any())
                        {
                            <a href="#speakers" class="nav-item nav-link">Diễn giả</a>
                        }

                        @* Liên kết đến Section _Sponsors.cshtml (Nhà tài trợ) *@
                        @if (Model.Sponsors != null && Model.Sponsors.Any())
                        {
                            <a href="#sponsors" class="nav-item nav-link">Đối tác</a>
                        }

                        @* Liên kết đến Section _Tickets.cshtml (Đặt vé/Quyên góp) *@
                        <a href="#tickets" class="nav-item nav-link">Đặt vé</a>
                    </div>
                    <div class="d-none d-lg-flex ms-auto align-items-center">
                        @* Hiển thị tên sự kiện từ Model  *@
                        <span class="text-white me-3 fw-bold">@Model.Title</span>
                        <a class="btn btn-square btn-dark ms-2" href="#"><i class="fab fa-facebook-f"></i></a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    @RenderBody()

    <div class="container-fluid bg-dark text-secondary px-5 mt-5">
        <div class="row gx-5 py-5">
            <div class="col-lg-3 col-md-6">
                <h3 class="text-light mb-4">Liên hệ</h3>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary me-3"></i>123 Street, NY, USA</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary me-3"></i>info@charitize.com</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-primary me-3"></i>+012 345 67890</p>
            </div>
            <div class="col-lg-3 col-md-6">
                <h3 class="text-light mb-4">Kết nối</h3>
                <div class="d-flex">
                    <a class="btn btn-square btn-primary me-2" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-square btn-primary me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-square btn-primary me-2" href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark text-secondary text-center border-top border-secondary py-4">
        <p class="mb-0">&copy; <a class="text-light fw-bold" href="#">Eventus</a>. All Rights Reserved.</p>
    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/Charitize/lib/wow/wow.min.js"></script>
    <script src="~/Templates/Charitize/lib/easing/easing.min.js"></script>
    <script src="~/Templates/Charitize/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Templates/Charitize/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Templates/Charitize/lib/counterup/counterup.min.js"></script>

    <script src="~/Templates/Charitize/js/main.js"></script>
</body>
</html>