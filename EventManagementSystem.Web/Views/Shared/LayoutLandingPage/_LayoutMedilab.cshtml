@model EventManagementSystem.Web.Models.Entities.Event

@{
    ViewBag.Title = Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewBag.Title - Eventus</title>

    <link href="~/Templates/Medilab/assets/img/favicon.png" rel="icon">

    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <link href="~/Templates/Medilab/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Templates/Medilab/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Templates/Medilab/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Templates/Medilab/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/Templates/Medilab/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Templates/Medilab/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link href="~/Templates/Medilab/assets/css/main.css" rel="stylesheet">

    <style>
        body {
            overflow-x: hidden;
        }

        .btn-home-back {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 9999;
            background: rgba(25, 119, 204, 0.1);
            color: #1977cc;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
            text-decoration: none;
        }

            .btn-home-back:hover {
                background: #1977cc;
                color: white;
            }
    </style>
</head>

<body class="index-page">

    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn-home-back"><i class="bi bi-arrow-left"></i></a>

    <div class="topbar d-flex align-items-center">
        <div class="container d-flex justify-content-center justify-content-md-between">
            <div class="contact-info d-flex align-items-center">
                <i class="bi bi-envelope d-flex align-items-center"><a href="mailto:contact@eventus.com">contact@eventus.com</a></i>
                <i class="bi bi-phone d-flex align-items-center ms-4"><span>1900 1234</span></i>
            </div>
            <div class="social-links d-none d-md-flex align-items-center">
                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
    </div>

    <header id="header" class="header sticky-top">
        <div class="branding d-flex align-items-center">
            <div class="container position-relative d-flex align-items-center justify-content-between">
                <a href="#hero" class="logo d-flex align-items-center me-auto">
                    <h1 class="sitename" style="font-size: 1.8rem;">@ViewBag.Title</h1>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a href="#hero" class="active">Trang chủ<br></a></li>
                        <li><a href="#about">Giới thiệu</a></li>
                        <li><a href="#speakers">Diễn giả</a></li>
                        <li><a href="#schedule">Lịch trình</a></li>
                        <li><a href="#gallery">Đối tác</a></li>
                        <li><a href="#contact">Đăng ký</a></li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>

                <a class="cta-btn d-none d-sm-block" href="#appointment">Đăng Ký Ngay</a>
            </div>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer id="footer" class="footer light-background">
        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">Eventus</strong> <span>All Rights Reserved</span></p>
        </div>
    </footer>

    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <div id="preloader"></div>

    <script src="~/Templates/Medilab/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/Medilab/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Templates/Medilab/assets/vendor/aos/aos.js"></script>
    <script src="~/Templates/Medilab/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Templates/Medilab/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Templates/Medilab/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <script src="~/Templates/Medilab/assets/js/main.js"></script>

</body>
</html>