<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Eventus Platform</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <link href="~/Templates/Medinova/img/favicon.ico" rel="icon">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/Templates/Medinova/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~Templates/Medinova/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <link href="~/Templates/Medinova/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Templates/Medinova/css/style.css" rel="stylesheet">

    <style>
        /* CSS sửa lỗi hiển thị */
        body {
            overflow-x: hidden;
        }

        .sticky-top.bg-white {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .btn-home-back {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 9999;
            background: rgba(0,0,0,0.5);
            color: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
            text-decoration: none;
        }

            .btn-home-back:hover {
                background: #004d40;
                color: white;
            }
    </style>
</head>

<body>
    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn-home-back" title="Quay về trang chủ">
        <i class="fas fa-arrow-left"></i>
    </a>

    <div class="container-fluid py-2 border-bottom d-none d-lg-block">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-lg-start mb-2 mb-lg-0">
                    <div class="d-inline-flex align-items-center">
                        <a class="text-decoration-none text-body pe-3" href="tel:+0123456789"><i class="bi bi-telephone me-2"></i>1900 1234</a>
                        <span class="text-body">|</span>
                        <a class="text-decoration-none text-body px-3" href="mailto:support@eventus.com"><i class="bi bi-envelope me-2"></i>support@eventus.com</a>
                    </div>
                </div>
                <div class="col-md-6 text-center text-lg-end">
                    <div class="d-inline-flex align-items-center">
                        <a class="text-body px-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="text-body px-2" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="text-body px-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a class="text-body px-2" href="#"><i class="fab fa-instagram"></i></a>
                        <a class="text-body ps-2" href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid sticky-top bg-white shadow-sm">
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0">
                <a href="#" class="navbar-brand">
                    <h1 class="m-0 text-uppercase text-primary"><i class="fa fa-calendar-check me-2"></i>Medinova</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0">
                        <a href="#hero" class="nav-item nav-link active">Tổng quan</a>
                        <a href="#speakers" class="nav-item nav-link">Diễn giả</a>
                        <a href="#schedule" class="nav-item nav-link">Lịch trình</a>
                        <a href="#sponsors" class="nav-item nav-link">Đối tác</a>
                        <a href="#pricing" class="nav-item nav-link">Vé</a>
                        <a href="#register" class="nav-item nav-link nav-contact bg-primary text-white px-5 ms-lg-5">Đăng ký <i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    @RenderBody()

    <div class="container-fluid bg-dark text-light mt-5 py-5">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="d-inline-block text-primary text-uppercase border-bottom border-5 border-secondary mb-4">Liên Hệ</h4>
                    <p class="mb-4">Kết nối với Ban Tổ Chức để được hỗ trợ tốt nhất.</p>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary me-3"></i>123 Đường ABC, Hà Nội</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary me-3"></i>support@eventus.com</p>
                    <p class="mb-0"><i class="fa fa-phone-alt text-primary me-3"></i>+012 345 67890</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="d-inline-block text-primary text-uppercase border-bottom border-5 border-secondary mb-4">Link Nhanh</h4>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-light mb-2" href="@Url.Action("Index", "Home", new { area = "" })"><i class="fa fa-angle-right me-2"></i>Trang chủ</a>
                        <a class="text-light mb-2" href="#about"><i class="fa fa-angle-right me-2"></i>Giới thiệu</a>
                        <a class="text-light" href="#contact"><i class="fa fa-angle-right me-2"></i>Liên hệ</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="d-inline-block text-primary text-uppercase border-bottom border-5 border-secondary mb-4">Theo Dõi</h4>
                    <div class="d-flex">
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-2" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle" href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark text-light border-top border-secondary py-4">
        <div class="container">
            <div class="row g-5">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-md-0">&copy; <a class="text-primary" href="#">Eventus</a>. All Rights Reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0">Designed by <a class="text-primary" href="#">Your Name</a></p>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/Medinova/lib/easing/easing.min.js"></script>
    <script src="~/Templates/Medinova/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Templates/Medinova/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Templates/Medinova/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/Templates/Medinova/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/Templates/Medinova/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Templates/Medinova/js/main.js"></script>
</body>
</html>