@model EventManagementSystem.Web.Models.Entities.Event

@{
    ViewBag.Title = Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@Model.Title - Eventus Platform</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <link href="~/Templates/Medinova/img/favicon.ico" rel="icon">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/Templates/Medinova/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Templates/Medinova/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <link href="~/Templates/Medinova/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Templates/Medinova/css/style.css" rel="stylesheet">

    <style>
        body { overflow-x: hidden; }
        .sticky-top.bg-white { box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1); }
        .btn-home-back {
            position: fixed; top: 20px; left: 20px; z-index: 9999;
            background: rgba(0,0,0,0.5); color: white; border-radius: 50%;
            width: 40px; height: 40px; display: flex; align-items: center;
            justify-content: center; transition: 0.3s; text-decoration: none;
        }
        .btn-home-back:hover { background: #13C2C2; color: white; }
        
        /* Giới hạn độ dài tiêu đề sự kiện trên Navbar */
        .navbar-brand h1 {
            max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
        }
    </style>
</head>

<body>
    @* Nút quay lại trang chủ hệ thống *@
    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn-home-back" title="Quay về trang chủ">
        <i class="fas fa-arrow-left"></i>
    </a>

    @* Topbar Thông tin liên hệ *@
    <div class="container-fluid py-2 border-bottom d-none d-lg-block">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-lg-start mb-2 mb-lg-0">
                    <div class="d-inline-flex align-items-center">
                        <span class="text-body pe-3"><i class="bi bi-geo-alt me-2"></i>@Model.Location</span>
                        <span class="text-body">|</span>
                        <a class="text-decoration-none text-body px-3" href="mailto:support@eventus.com"><i class="bi bi-envelope me-2"></i>support@eventus.com</a>
                    </div>
                </div>
                <div class="col-md-6 text-center text-lg-end">
                    <div class="d-inline-flex align-items-center">
                        <a class="text-body px-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="text-body px-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a class="text-body px-2" href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Navbar chính *@
    <div class="container-fluid sticky-top bg-white shadow-sm">
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0">
                <a href="#hero" class="navbar-brand">
                    <h1 class="m-0 text-uppercase text-primary"><i class="fa fa-clinic-medical me-2"></i>MEDINOVA</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0">
                        <a href="#hero" class="nav-item nav-link active">Tổng quan</a>
                        <a href="#about" class="nav-item nav-link">Giới thiệu</a>

                        @* Menu động: Chỉ hiện nếu có Lịch trình *@
                        @if (Model.Schedules != null && Model.Schedules.Any())
                        {
                            <a href="#schedule" class="nav-item nav-link">Lịch trình</a>
                        }

                        @* Menu động: Chỉ hiện nếu có Diễn giả/Bác sĩ *@
                        @if (Model.Speakers != null && Model.Speakers.Any())
                        {
                            <a href="#speakers" class="nav-item nav-link">Diễn giả</a>
                        }

                        @* Menu động: Chỉ hiện nếu có Nhà tài trợ *@
                        @if (Model.Sponsors != null && Model.Sponsors.Any())
                        {
                            <a href="#sponsors" class="nav-item nav-link">Đối tác</a>
                        }

                        <a href="#tickets" class="nav-item nav-link">Vé tham dự</a>
                        <a href="#tickets" class="nav-item nav-link nav-contact bg-primary text-white px-5 ms-lg-5">Đăng ký <i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @* Nội dung các Section *@
    <main>
        @RenderBody()
    </main>

    @* Footer thông tin sự kiện *@
    <div class="container-fluid bg-dark text-light mt-5 py-5">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-4 col-md-6">
                    <h4 class="d-inline-block text-primary text-uppercase border-bottom border-5 border-secondary mb-4">Sự Kiện</h4>
                    <p class="mb-4">@Model.Title</p>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary me-3"></i>@Model.Location</p>
                    <p class="mb-2"><i class="fa fa-calendar-alt text-primary me-3"></i>Bắt đầu: @($"{Model.StartDate:dd/MM/yyyy}")</p>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h4 class="d-inline-block text-primary text-uppercase border-bottom border-5 border-secondary mb-4">Link Nhanh</h4>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-light mb-2" href="#hero"><i class="fa fa-angle-right me-2"></i>Trang chủ</a>
                        <a class="text-light mb-2" href="#about"><i class="fa fa-angle-right me-2"></i>Giới thiệu</a>
                        <a class="text-light" href="#tickets"><i class="fa fa-angle-right me-2"></i>Mua vé</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h4 class="d-inline-block text-primary text-uppercase border-bottom border-5 border-secondary mb-4">Đơn vị tổ chức</h4>
                    <p>Eventus Platform - Nền tảng quản lý sự kiện chuyên nghiệp.</p>
                    <div class="d-flex mt-4">
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle" href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark text-light border-top border-secondary py-4 text-center">
        <p class="mb-0">&copy; <a class="text-primary" href="#">Eventus</a>. All Rights Reserved.</p>
    </div>

    @* Nút quay lại đầu trang *@
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    @* Scripts *@
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/Medinova/lib/easing/easing.min.js"></script>
    <script src="~/Templates/Medinova/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Templates/Medinova/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Templates/Medinova/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/Templates/Medinova/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Templates/Medinova/js/main.js"></script>
</body>
</html>