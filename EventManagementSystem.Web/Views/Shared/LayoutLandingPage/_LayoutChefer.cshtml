@model EventManagementSystem.Web.Models.Entities.Event

@{
    ViewBag.Title = Model.Title;
    Layout = null; // Trang độc lập
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@Model.Title - Eventus</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <link href="~/Templates/Chefer/img/favicon.ico" rel="icon">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Emblema+One&family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Templates/Chefer/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Templates/Chefer/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="~/Templates/Chefer/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Templates/Chefer/css/style.css" rel="stylesheet">

    <style>
        body { overflow-x: hidden; }
        .btn-home-back {
            position: fixed; top: 20px; left: 20px; z-index: 9999;
            background: rgba(0,0,0,0.5); color: white; border-radius: 50%;
            width: 40px; height: 40px; display: flex; align-items: center;
            justify-content: center; transition: 0.3s; text-decoration: none;
        }
        .btn-home-back:hover { background: #d4a762; color: white; }
    </style>
</head>

<body>
    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn-home-back" title="Quay về trang chủ">
        <i class="fas fa-arrow-left"></i>
    </a>

    <div class="container-fluid bg-dark px-0">
        <div class="row gx-0">
            <div class="col-lg-3 bg-primary d-none d-lg-block">
                <a href="#hero" class="navbar-brand w-100 h-100 m-0 p-0 d-flex align-items-center justify-content-center">
                    <h1 class="m-0 text-uppercase text-white" style="font-size: 1.5rem;">
                        <i class="fa fa-utensils me-2"></i> CHEFER
                    </h1>
                </a>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg navbar-dark p-3 p-lg-0 px-lg-5" style="background: #111111;">
                    <a href="#hero" class="navbar-brand d-block d-lg-none">
                        <h1 class="m-0 display-4 text-primary text-uppercase">@Model.Title</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="#hero" class="nav-item nav-link active">Trang chủ</a>
                            <a href="#about" class="nav-item nav-link">Giới thiệu</a>

                            @* Menu động: Chỉ hiện nếu có Lịch trình *@
                            @if (Model.Schedules != null && Model.Schedules.Any())
                            {
                                <a href="#schedule" class="nav-item nav-link">Lịch trình</a>
                            }

                            @* Menu động: Chỉ hiện nếu có Diễn giả (Đầu bếp) *@
                            @if (Model.Speakers != null && Model.Speakers.Any())
                            {
                                <a href="#speakers" class="nav-item nav-link">Đầu bếp</a>
                            }

                            @* Menu động: Chỉ hiện nếu có Nhà tài trợ (Đối tác) *@
                            @if (Model.Sponsors != null && Model.Sponsors.Any())
                            {
                                <a href="#sponsors" class="nav-item nav-link">Đối tác</a>
                            }

                            <a href="#tickets" class="nav-item nav-link">Đặt vé</a>
                        </div>
                        <div class="d-none d-lg-flex align-items-center py-2">
                             <span class="text-white me-3 fw-bold">@Model.Title</span>
                             <a class="btn btn-outline-secondary btn-square rounded-circle ms-2" href=""><i class="fab fa-facebook-f"></i></a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    @RenderBody()

    @* Footer phần Thông tin liên hệ *@
    <div class="container-fluid bg-dark text-secondary px-5 mt-5">
        <div class="row gx-5 py-5">
            <div class="col-lg-4 col-md-6">
                <h3 class="text-light mb-4">Thông Tin Sự Kiện</h3>
                <div class="d-flex mb-2">
                    <i class="bi bi-geo-alt text-primary me-2"></i>
                    <p class="mb-0">@Model.Location</p>
                </div>
                <div class="d-flex mb-2">
                    <i class="bi bi-calendar-event text-primary me-2"></i>
                    <p class="mb-0">Bắt đầu: @($"{Model.StartDate:dd/MM/yyyy HH:mm}")</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <h3 class="text-light mb-4">Liên Kết Nhanh</h3>
                <div class="d-flex flex-column justify-content-start">
                    <a class="text-secondary mb-2" href="#hero">Trang chủ</a>
                    <a class="text-secondary mb-2" href="#about">Giới thiệu</a>
                    <a class="text-secondary mb-2" href="#tickets">Đặt vé ngay</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-dark text-secondary text-center border-top border-secondary py-4">
        <p class="mb-0">&copy; <a class="text-light fw-bold" href="#">Eventus</a>. All Rights Reserved.</p>
    </div>

    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    @* Scripts *@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/Chefer/lib/wow/wow.min.js"></script>
    <script src="~/Templates/Chefer/lib/easing/easing.min.js"></script>
    <script src="~/Templates/Chefer/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Templates/Chefer/lib/counterup/counterup.min.js"></script>
    <script src="~/Templates/Chefer/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Templates/Chefer/js/main.js"></script>
</body>
</html>