@model EventManagementSystem.Web.Models.Entities.Event

@{
    ViewBag.Title = Model.Title;
    Layout = null; // Trang độc lập
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@Model.Title - Eventus</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <link href="~/Templates/Chefer/img/favicon.ico" rel="icon">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Emblema+One&family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Templates/Chefer/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Templates/Chefer/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="~/Templates/Chefer/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Templates/Chefer/css/style.css" rel="stylesheet">

    <style>
        /* CSS bổ sung */
        body {
            overflow-x: hidden;
        }

        .sticky-top {
            top: 0;
            position: fixed;
            width: 100%;
            z-index: 999;
        }

        .btn-home-back {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 9999;
            background: rgba(0,0,0,0.5);
            color: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
            text-decoration: none;
        }

            .btn-home-back:hover {
                background: #d4a762;
                color: white;
            }
        /* Màu vàng Chefer */
    </style>
</head>

<body>
    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn-home-back" title="Quay về trang chủ">
        <i class="fas fa-arrow-left"></i>
    </a>

    <div class="container-fluid bg-dark px-0">
        <div class="row gx-0">
            <div class="col-lg-3 bg-primary d-none d-lg-block">
                <a href="#hero" class="navbar-brand">
                    <h1 class="m-0 text-uppercase text-primary" style="font-size: 1.5rem;">
                        <i class="fa fa-calendar-check me-2"></i> @ViewBag.Title
                    </h1>
                </a>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg navbar-dark p-3 p-lg-0 px-lg-5" style="background: #111111;">
                    <a href="index.html" class="navbar-brand d-block d-lg-none">
                        <h1 class="m-0 display-4 text-primary text-uppercase">@ViewBag.Title</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="#hero" class="nav-item nav-link active">Trang chủ</a>
                            <a href="#about" class="nav-item nav-link">Giới thiệu</a>
                            <a href="#speakers" class="nav-item nav-link">Khách mời</a>
                            <a href="#schedule" class="nav-item nav-link">Lịch trình</a>
                            <a href="#pricing" class="nav-item nav-link">Vé</a>
                            <a href="#register" class="nav-item nav-link">Đăng ký</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    @RenderBody()

    <div class="container-fluid bg-dark text-secondary px-5 mt-5">
        <div class="row gx-5">
            <div class="col-lg-8 col-md-6">
                <div class="row gx-5">
                    <div class="col-lg-4 col-md-12 pt-5 mb-5">
                        <h3 class="text-light mb-4">Liên Hệ</h3>
                        <div class="d-flex mb-2">
                            <i class="bi bi-geo-alt text-primary me-2"></i>
                            <p class="mb-0">123 Street, New York, USA</p>
                        </div>
                        <div class="d-flex mb-2">
                            <i class="bi bi-envelope-open text-primary me-2"></i>
                            <p class="mb-0">info@eventus.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark text-secondary px-5">
        <div class="row gx-5">
            <div class="col-lg-8">
                <div class="py-lg-4 text-center">
                    <p class="text-secondary mb-0">&copy; <a class="text-light fw-bold" href="#">Eventus</a>. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/Chefer/lib/wow/wow.min.js"></script>
    <script src="~/Templates/Chefer/lib/easing/easing.min.js"></script>
    <script src="~/Templates/Chefer/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Templates/Chefer/lib/counterup/counterup.min.js"></script>
    <script src="~/Templates/Chefer/lib/owlcarousel/owl.carousel.min.js"></script>

    <script src="~/Templates/Chefer/js/main.js"></script>
</body>
</html>