@model EventManagementSystem.Web.Models.Entities.Event

@{
    ViewBag.Title = Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewBag.Title - Eventus</title>

    <link href="~/Templates/KnightOne/assets/img/favicon.png" rel="icon">

    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Poppins:wght@300;400;500;600;700&family=Raleway:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link href="~/Templates/KnightOne/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Templates/KnightOne/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Templates/KnightOne/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Templates/KnightOne/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Templates/KnightOne/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link href="~/Templates/KnightOne/assets/css/main.css" rel="stylesheet">

    <style>
        body {
            overflow-x: hidden;
        }

        .btn-home-back {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 9999;
            background: rgba(0, 123, 255, 0.1);
            color: #007bff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
            text-decoration: none;
        }

        .btn-home-back:hover {
            background: #007bff;
            color: white;
        }
        
        /* Đảm bảo logo/sitename không bị quá dài */
        .header .logo h1 {
            max-width: 300px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>

<body class="index-page">

    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn-home-back" title="Quay về trang chủ">
        <i class="bi bi-arrow-left"></i>
    </a>

    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container position-relative d-flex align-items-center justify-content-between">

            <a href="#hero" class="logo d-flex align-items-center me-auto me-xl-0">
                <h1 class="sitename">@Model.Title</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="#hero" class="active">Trang chủ</a></li>
                    <li><a href="#about">Giới thiệu</a></li>

                    @* Hiển thị Lịch trình nếu có dữ liệu *@
                    @if (Model.Schedules != null && Model.Schedules.Any())
                    {
                        <li><a href="#schedule">Lịch trình</a></li>
                    }

                    @* Hiển thị Diễn giả nếu có dữ liệu *@
                    @if (Model.Speakers != null && Model.Speakers.Any())
                    {
                        <li><a href="#speakers">Diễn giả</a></li>
                    }

                    @* Hiển thị Đối tác nếu có dữ liệu *@
                    @if (Model.Sponsors != null && Model.Sponsors.Any())
                    {
                        <li><a href="#sponsors">Đối tác</a></li>
                    }

                    <li><a href="#tickets">Vé tham dự</a></li>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <a class="cta-btn" href="#tickets">Mua Vé Ngay</a>

        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer id="footer" class="footer dark-background">
        <div class="container">
            <h3 class="sitename">Eventus</h3>
            <p>Nền tảng quản lý và tổ chức sự kiện chuyên nghiệp hàng đầu cho "@Model.Title".</p>
            <div class="social-links d-flex justify-content-center mb-3">
                <a href=""><i class="bi bi-twitter-x"></i></a>
                <a href=""><i class="bi bi-facebook"></i></a>
                <a href=""><i class="bi bi-instagram"></i></a>
                <a href=""><i class="bi bi-linkedin"></i></a>
            </div>
            <div class="container">
                <div class="copyright">
                    <span>Copyright</span> <strong class="px-1 sitename">Eventus</strong> <span>All Rights Reserved</span>
                </div>
            </div>
        </div>
    </footer>

    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <div id="preloader"></div>

    <script src="~/Templates/KnightOne/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/KnightOne/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Templates/KnightOne/assets/vendor/aos/aos.js"></script>
    <script src="~/Templates/KnightOne/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Templates/KnightOne/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Templates/KnightOne/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/Templates/KnightOne/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Templates/KnightOne/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <script src="~/Templates/KnightOne/assets/js/main.js"></script>

</body>

</html>