@model EventManagementSystem.Web.Models.Entities.Event

@{
    ViewBag.Title = Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewBag.Title - Eventus</title>

    <link href="~/Content/Templates/Yummy/assets/img/favicon.png" rel="icon">

    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Amatic+SC:wght@400;700&display=swap" rel="stylesheet">

    <link href="~/Templates/Yummy/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Templates/Yummy/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Templates/Yummy/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Templates/Yummy/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Templates/Yummy/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link href="~/Templates/Yummy/assets/css/main.css" rel="stylesheet">

    <style>
        /* Custom CSS để fix lỗi hiển thị khi tích hợp */
        body {
            overflow-x: hidden;
        }

        .btn-home-back {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 9999;
            background: rgba(206, 18, 18, 0.1);
            color: var(--color-primary);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
            text-decoration: none;
        }

            .btn-home-back:hover {
                background: var(--color-primary);
                color: white;
            }
    </style>
</head>

<body class="index-page">

    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn-home-back"><i class="bi bi-arrow-left"></i></a>

    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container position-relative d-flex align-items-center justify-content-between">

            <a href="#hero" class="logo d-flex align-items-center me-auto me-xl-0">
                <h1 class="sitename" style="font-size: 1.8rem;">Eventus</h1>
                <span>.</span>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="#hero" class="active">Trang chủ<br></a></li>
                    <li><a href="#about">Giới thiệu</a></li>
                    <li><a href="#stats">Thống kê</a></li>
                    <li><a href="#menu">Vé tham dự</a></li>
                    <li><a href="#events">Lịch trình</a></li>
                    <li><a href="#chefs">Khách mời</a></li>
                    <li><a href="#contact">Liên hệ</a></li>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <a class="btn-getstarted" href="#book-a-table">Đăng Ký Ngay</a>

        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer id="footer" class="footer dark-background">
        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">Eventus</strong> <span>All Rights Reserved</span></p>
            <div class="credits">
                Designed by <a href="#">Your Name</a>
            </div>
        </div>
    </footer>

    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <div id="preloader"></div>

    <script src="~/Templates/Yummy/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/Yummy/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Templates/Yummy/assets/vendor/aos/aos.js"></script>
    <script src="~/Templates/Yummy/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Templates/Yummy/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Templates/Yummy/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <script src="~/Templates/Yummy/assets/js/main.js"></script>

</body>
</html>