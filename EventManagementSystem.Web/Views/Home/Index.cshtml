    // Tính toán thời gian còn lại cho Spotlight
    var timeSpan = Model.SpotlightEvent != null ? Model.SpotlightEvent.StartDate - DateTime.Now : TimeSpan.Zero;
    var daysLeft = timeSpan.Days > 0 ? timeSpan.Days : 0;
    var hoursLeft = timeSpan.Hours > 0 ? timeSpan.Hours : 0;

